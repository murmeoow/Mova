<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Mova" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/mova_black</item>
    </style>

    <style name="Theme.Splash" parent="android:ThemeOverlay.Material.Dark">
        <item name="android:windowBackground">@drawable/bg_splash_screen</item>
        <item name="android:windowActionBar">true</item>
        <item name="android:navigationBarColor">@color/mova_black</item>
    </style>
</resources>